generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Area {
  id        String   @id @default(uuid())
  name      String
  color     String
  projects  Project[]
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  deadline    DateTime?
  area        Area?    @relation(fields: [areaId], references: [id])
  areaId      String?
  tasks       Task[]
}

model Task {
  id            String   @id @default(uuid())
  title         String
  notes         String?
  dueDate       DateTime?
  reminderTime  DateTime?
  startDate     DateTime?
  status        String
  priority      String?
  flagged       Boolean  @default(false)
  parentTaskId  String?
  project       Project? @relation(fields: [projectId], references: [id])
  projectId     String?
  tags          Tag[]    @relation("TaskTags")
  parent        Task?    @relation("Subtasks", fields: [parentTaskId], references: [id])
  subtasks      Task[]   @relation("Subtasks")
  recurrence    String?
  order         Int      @default(0)
}

model Tag {
  id    String   @id @default(uuid())
  name  String
  color String
  tasks Task[]   @relation("TaskTags")
}
